{
  "name": "r9-components",
  "version": "1.0.0",
  "scripts": {
    "eslint": "eslint --fix --ignore-path .gitignore .",
    "prettier": "prettier --ignore-path .gitignore --list-different --write **/*.{css,html,js,json,md,scss,yml}",
    "stylelint": "stylelint **/*.scss --fix --ignore-path .gitignore",
    "parcel:build": "parcel build site/assets/src/site.js --out-dir site/assets/dist --public-url ./",
    "parcel:watch": "parcel watch site/assets/src/site.js --out-dir site/assets/dist --public-url ./"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "babel-eslint": "^10.0.3",
    "bootstrap": "4.3.1",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-prettier": "^3.1.2",
    "jquery": "^3.4.1",
    "node-sass": "^4.13.1",
    "parcel-bundler": "^1.12.4",
    "popper.js": "^1.16.1",
    "prettier": "^1.19.1",
    "stylelint": "^13.2.0",
    "stylelint-config-prettier": "^8.0.1",
    "stylelint-config-twbs-bootstrap": "^2.0.1",
    "stylelint-prettier": "^1.1.2"
  }
}
